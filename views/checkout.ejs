<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Checkout - Food Ordering</title>
    <script src="https://cdn.tailwindcss.com/3.4.16"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.6.0/remixicon.min.css"
      rel="stylesheet"
    />
   
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: "#0066CC",
              secondary: "#FF7F50",
            },
            borderRadius: {
              none: "0px",
              sm: "4px",
              DEFAULT: "8px",
              md: "12px",
              lg: "16px",
              xl: "20px",
              "2xl": "24px",
              "3xl": "32px",
              full: "9999px",
              button: "8px",
            },
          },
        },
      };
    </script>
    <link rel="stylesheet" href="/stylesheets/checkout.css">
  </head>
  <body class="bg-gray-50 text-gray-800 min-h-screen">
    <!-- Header -->
    <header class="fixed top-0 left-0 right-0 bg-gray-800 text-white z-50 h-14">
      <div class="flex items-center justify-between h-full px-4">
        <button
        class="w-6 h-6 flex items-center justify-center"
        onclick="window.location.href='/home'"
        >
        <i class="ri-arrow-left-line text-xl"></i>
        </button>
        <h1 class="text-lg font-medium">Checkout</h1>
        <div class="w-6"></div>
      </div>
    </header>
    <!-- Main Content -->
    <main class="pt-14 pb-24 px-4">
      <!-- Cart Items -->
      <div class="mt-6 space-y-4" id="cartItems">
        <!-- Cart Item 1 -->
        <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-100">
          <div class="flex items-start space-x-3">
            <img
              src="imglink"
              alt="Margherita Pizza"
              class="w-12 h-12 rounded object-cover"
            />
            <div class="flex-1">
              <h3 class="font-medium text-gray-900">Margherita Pizza</h3>
              <p class="text-sm text-gray-600 mt-1">
                Classic tomato sauce, mozzarella
              </p>
              <div class="flex items-center justify-between mt-3">
                <span class="text-lg font-semibold text-gray-900"
                  >₹ 299.00</span
                >
                <div class="flex items-center space-x-2">
                  <button
                    class="w-8 h-8 flex items-center justify-center bg-gray-100 rounded-full"
                    onclick="updateQuantity('pizza1', -1)"
                  >
                    <i class="ri-subtract-line text-sm"></i>
                  </button>
                  <span class="w-8 text-center font-medium" id="qty-pizza1"
                    >2</span
                  >
                  <button
                    class="w-8 h-8 flex items-center justify-center bg-secondary text-white rounded-full"
                    onclick="updateQuantity('pizza1', 1)"
                  >
                    <i class="ri-add-line text-sm"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Cart Item 2 -->
        <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-100">
          <div class="flex items-start space-x-3">
            <img
              src="imglink"
              alt="Caesar Salad"
              class="w-12 h-12 rounded object-cover"
            />
            <div class="flex-1">
              <h3 class="font-medium text-gray-900">Caesar Salad</h3>
              <p class="text-sm text-gray-600 mt-1">
                Fresh lettuce, parmesan, croutons
              </p>
              <div class="flex items-center justify-between mt-3">
                <span class="text-lg font-semibold text-gray-900"
                  >₹ 189.00</span
                >
                <div class="flex items-center space-x-2">
                  <button
                    class="w-8 h-8 flex items-center justify-center bg-gray-100 rounded-full"
                    onclick="updateQuantity('salad1', -1)"
                  >
                    <i class="ri-subtract-line text-sm"></i>
                  </button>
                  <span class="w-8 text-center font-medium" id="qty-salad1"
                    >1</span
                  >
                  <button
                    class="w-8 h-8 flex items-center justify-center bg-secondary text-white rounded-full"
                    onclick="updateQuantity('salad1', 1)"
                  >
                    <i class="ri-add-line text-sm"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Cart Item 3 -->
        <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-100">
          <div class="flex items-start space-x-3">
            <img
              src="imglink"
              alt="Pasta Carbonara"
              class="w-12 h-12 rounded object-cover"
            />
            <div class="flex-1">
              <h3 class="font-medium text-gray-900">Pasta Carbonara</h3>
              <p class="text-sm text-gray-600 mt-1">
                Creamy sauce, bacon, parmesan
              </p>
              <div class="flex items-center justify-between mt-3">
                <span class="text-lg font-semibold text-gray-900"
                  >₹ 349.00</span
                >
                <div class="flex items-center space-x-2">
                  <button
                    class="w-8 h-8 flex items-center justify-center bg-gray-100 rounded-full"
                    onclick="updateQuantity('pasta1', -1)"
                  >
                    <i class="ri-subtract-line text-sm"></i>
                  </button>
                  <span class="w-8 text-center font-medium" id="qty-pasta1"
                    >1</span
                  >
                  <button
                    class="w-8 h-8 flex items-center justify-center bg-secondary text-white rounded-full"
                    onclick="updateQuantity('pasta1', 1)"
                  >
                    <i class="ri-add-line text-sm"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Price Breakdown -->
      <div
        class="mt-8 bg-white rounded-lg p-4 shadow-sm border border-gray-100"
      >
        <h3 class="font-medium text-gray-900 mb-4">Order Summary</h3>
        <div class="space-y-3">
          <div class="flex justify-between text-sm">
            <span class="text-gray-600">Subtotal</span>
            <span class="font-medium" id="subtotal">₹ 1,137.00</span>
          </div>
          <div class="flex justify-between text-sm">
            <span class="text-gray-600">Delivery Fee</span>
            <span class="font-medium">₹ 49.00</span>
          </div>
          <div class="flex justify-between text-sm">
            <span class="text-gray-600">Tax</span>
            <span class="font-medium" id="tax">₹ 118.64</span>
          </div>
          <div class="border-t pt-3">
            <div class="flex justify-between">
              <span class="font-semibold text-gray-900">Total</span>
              <span class="font-bold text-lg text-gray-900" id="total"
                >₹ 1,305.00</span
              >
            </div>
            <div class="flex justify-end">
                <span class="text-xs text-gray-500" id="orderSummaryRoundOff">(+0.36 round-off)</span>
            </div>
          </div>
        </div>
      </div>
      <!-- Delivery Address -->
      <div
        class="mt-6 bg-white rounded-lg p-4 shadow-sm border border-gray-100"
      >
        <div class="flex items-center justify-between mb-3">
          <h3 class="font-medium text-gray-900">Delivery Address</h3>
          <button
            class="text-secondary text-sm font-medium"
            onclick="toggleAddressEdit()"
          >
            Change
          </button>
        </div>
        <div class="flex items-start space-x-3" id="addressDisplay">
          <div class="w-5 h-5 flex items-center justify-center mt-1">
            <i class="ri-map-pin-line text-secondary"></i>
          </div>
          <div>
            <button
              class="font-medium text-gray-900 flex items-center gap-2"
              onclick="toggleAddressType()"
            >
              <span id="selectedType">Home</span>
              <i class="ri-arrow-down-s-line"></i>
            </button>
            <p class="text-sm text-gray-600 mt-1" id="savedAddress">
              123 Oak Street, Downtown District<br />New York, NY 10001
            </p>
          </div>
        </div>
        <!-- Address Type Dropdown -->
        <div
          id="addressTypeDropdown"
          class="hidden mt-2 bg-white border border-gray-200 rounded-lg shadow-lg absolute z-10"
        >
          <div class="py-1">
            <button
              class="w-full px-4 py-2 text-left hover:bg-gray-100"
              onclick="selectAddressType('Home')"
            >
              Home
            </button>
            <button
              class="w-full px-4 py-2 text-left hover:bg-gray-100"
              onclick="selectAddressType('Work')"
            >
              Work
            </button>
            <button
              class="w-full px-4 py-2 text-left hover:bg-gray-100"
              onclick="selectAddressType('Other')"
            >
              Other
            </button>
          </div>
        </div>
        <!-- Address Edit Form -->
        <div id="addressEditForm" class="hidden mt-4 space-y-4">
          <div class="space-y-3">
            <input
              type="text"
              id="fullName"
              placeholder="Full Name"
              class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-primary"
            />
            <input
              type="text"
              id="street"
              placeholder="Street Address"
              class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-primary"
            />
            <div class="grid grid-cols-2 gap-3">
              <input
                type="text"
                id="city"
                placeholder="City"
                class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-primary"
              />
              <input
                type="text"
                id="pincode"
                placeholder="Pincode"
                class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-primary"
              />
            </div>
          </div>
          <button
            onclick="saveAddress()"
            class="w-full bg-primary text-white py-2 rounded-button font-medium mt-4 !rounded-button whitespace-nowrap"
          >
            Save Address
          </button>
        </div>
      </div>
      <!-- Payment Method -->
      <div
        class="mt-6 bg-white rounded-lg p-4 shadow-sm border border-gray-100"
      >
        <div class="flex items-center mb-3">
          <h3 class="font-medium text-gray-900">Payment Method</h3>
        </div>
        <div class="space-y-4">
          <!-- COD Option -->
          <label class="flex items-start space-x-3 cursor-pointer">
            <input
              type="radio"
              name="paymentMethod"
              value="cod"
              class="mt-1"
              onchange="handlePaymentMethodChange('cod')"
            />
            <div class="flex-1">
              <div class="flex items-center space-x-3">
                <div
                  class="w-8 h-8 flex items-center justify-center bg-gray-100 rounded"
                >
                  <i class="ri-money-rupee-circle-line text-gray-600"></i>
                </div>
                <div>
                  <p class="font-medium text-gray-900">Cash on Delivery</p>
                  <div class="flex items-center mt-1 space-x-2">
                    <p class="text-sm text-gray-600" id="codAmount">₹ 1,304.64</p>
                    <span class="text-sm text-gray-500" id="codRoundOff">(+0.36 round-off)</span>
                  </div>
                </div>
              </div>
            </div>
          </label>
          <!-- UPI Option -->
          <label class="flex items-start space-x-3 cursor-pointer">
            <input
              type="radio"
              name="paymentMethod"
              value="upi"
              class="mt-1"
              onchange="handlePaymentMethodChange('upi')"
            />
            <div class="flex-1">
              <div class="flex items-center space-x-3">
                <div
                  class="w-8 h-8 flex items-center justify-center bg-gray-100 rounded"
                >
                  <i class="ri-bank-card-line text-gray-600"></i>
                </div>
                <div>
                  <p class="font-medium text-gray-900">UPI Payment</p>
                  <p class="text-sm text-gray-600">Pay using UPI apps</p>
                </div>
              </div>
              <div
                class="grid grid-cols-3 gap-3 mt-3"
                id="upiOptions"
                style="display: none;"
              >
                <button
                  onclick="handleUPIPayment('gpay')"
                  class="flex items-center justify-center space-x-2 bg-gray-50 hover:bg-gray-100 py-2 px-3 rounded-button"
                >
                  <i class="ri-google-fill text-blue-600"></i>
                  <span class="text-sm font-medium">GPay</span>
                </button>
                <button
                  onclick="handleUPIPayment('phonepe')"
                  class="flex items-center justify-center space-x-2 bg-gray-50 hover:bg-gray-100 py-2 px-3 rounded-button"
                >
                  <i class="ri-smartphone-fill text-purple-600"></i>
                  <span class="text-sm font-medium">PhonePe</span>
                </button>
                <button
                  onclick="handleUPIPayment('paytm')"
                  class="flex items-center justify-center space-x-2 bg-gray-50 hover:bg-gray-100 py-2 px-3 rounded-button"
                >
                  <i class="ri-wallet-3-fill text-blue-500"></i>
                  <span class="text-sm font-medium">Paytm</span>
                </button>
              </div>
            </div>
          </label>
        </div>
      </div>
    </main>
    <!-- Bottom Action Bar -->
    <div
      class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 p-4"
    >
      <button
        class="w-full bg-primary text-white py-3 rounded-button font-medium !rounded-button whitespace-nowrap"
        onclick="confirmOrder()"
        id="confirmBtn"
      >
        Confirm Order
      </button>
    </div>
    <!-- Loading Overlay -->
    <div
      id="loadingOverlay"
      class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden"
    >
      <div class="bg-white rounded-lg p-6 mx-4 max-w-sm w-full text-center">
        <div
          class="animate-spin w-8 h-8 border-4 border-primary border-t-transparent rounded-full mx-auto mb-4"
        ></div>
        <p class="text-gray-900 font-medium">Processing your order...</p>
      </div>
    </div>
    <!-- Success Modal -->
    <div
      id="successModal"
      class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden"
    >
      <div class="bg-white rounded-lg p-6 mx-4 max-w-sm w-full text-center">
        <div
          class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4"
        >
          <i class="ri-check-line text-2xl text-green-600"></i>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">
          Order Confirmed!
        </h3>
        <p class="text-gray-600 mb-6">
          Your order has been placed successfully. You'll receive a confirmation
          shortly.
        </p>
        <button
          class="w-full bg-primary text-white py-3 rounded-button font-medium !rounded-button whitespace-nowrap"
          onclick="continueShopping()"
        >
          Continue Shopping
        </button>
      </div>
    </div>

   <script src="/javascripts/checkout.js"></script>
   


  

  </body>
</html>

